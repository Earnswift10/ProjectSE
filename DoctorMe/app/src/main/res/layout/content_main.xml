<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ff0000">
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ประวัติการรักษาผู้ป่วย"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="22dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="#00ffbf"
        app:layout_editor_absoluteX="0dp"
        app:layout_editor_absoluteY="60dp">
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ประวัติผู้ป่วย"
        android:textColor="#000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_editor_absoluteY="68dp"
        app:layout_editor_absoluteX="10dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_editor_absoluteX="145dp"
        app:layout_editor_absoluteY="111dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ชื่อ: "
        android:textColor="#000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_editor_absoluteX="15dp"
        app:layout_editor_absoluteY="240dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/Fname"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        app:layout_editor_absoluteX="57dp"
        app:layout_editor_absoluteY="240dp">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textSize="18dp"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="นามสกุล: "
        android:textColor="#000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_editor_absoluteY="240dp"
        app:layout_editor_absoluteX="180dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/Lname"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        app:layout_editor_absoluteX="265dp"
        app:layout_editor_absoluteY="240dp">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textSize="18dp"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="อายุ: "
        android:textColor="#000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_editor_absoluteY="280dp"
        app:layout_editor_absoluteX="15dp" />



    <android.support.design.widget.TextInputLayout
        android:id="@+id/age"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        app:layout_editor_absoluteX="57dp"
        app:layout_editor_absoluteY="280dp">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textSize="18dp" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="145dp"
        android:layout_height="40dp"
        android:background="#00ffbf"
        app:layout_editor_absoluteX="0dp"
        app:layout_editor_absoluteY="330dp">
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ประวัติการรักษา"
        android:textColor="#000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_editor_absoluteY="340dp"
        app:layout_editor_absoluteX="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="วัน/เดือน/ปี: "
        android:textColor="#000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_editor_absoluteY="380dp"
        app:layout_editor_absoluteX="15dp" />

    <EditText
        android:id="@+id/dateinc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:textSize="18dp"
        app:layout_editor_absoluteX="105dp"
        app:layout_editor_absoluteY="380dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="อาการป่วย: "
        android:textColor="#000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_editor_absoluteY="420dp"
        app:layout_editor_absoluteX="15dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/symptom"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_editor_absoluteX="105dp"
        app:layout_editor_absoluteY="420dp">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:textSize="18dp" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="การรักษา: "
        android:textColor="#000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_editor_absoluteY="460dp"
        app:layout_editor_absoluteX="15dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/treat"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_editor_absoluteX="105dp"
        app:layout_editor_absoluteY="460dp">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:textSize="18dp" />
    </android.support.design.widget.TextInputLayout>
</android.support.constraint.ConstraintLayout>
